{
  "name": "raw-salmon",
  "version": "1.0.0",
  "description": "The goto knowledge base",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*",
      "hasura"
    ]
  },
  "scripts": {
    "commit": "node_modules/commitizen/bin/git-cz",
    "bootstrap": "lerna bootstrap --concurrency=2",
    "build": "./scripts/patch-core-count.sh && lerna run build",
    "artifact:create": "lerna run artifact:create",
    "test": "lerna run test",
    "clean": "lerna clean",
    "docs": "docsify serve -p 4000 docs",
    "postinstall": "npm run bootstrap -- --no-ci",
    "lint-files": "eslint . --ext .js  --ext .graphql",
    "lint": "npm run generate-schema && npm run lint-files",
    "dev:lint": "npm run dev:generate-schema && npm run lint-files",
    "lint:fix": "eslint --fix --ext .js --ext .graphql .",
    "dev:generate-schema": "graphql get-schema --dotenv packages/knowledge-base/.env.development --output=hasura-schema.json",
    "generate-schema": "graphql get-schema --output=hasura-schema.json",
    "start:ab": "lerna exec --scope=assess-base npm start",
    "start:kb": "lerna exec --scope=knowledge-base npm start",
    "start:apps": "npm run start:ab & npm run start:kb",
    "e2e-test": "lerna run --scope=e2e-tests --stream --no-prefix e2e-test -- ",
    "dev:e2e-test": "npm run e2e-test -- ./local.js -- --screenshots-on-fails",
    "hosted:e2e-test": "npm run e2e-test -- ./hosted.js -- --screenshots-on-fails",
    "ci:e2e-test": "start-server-and-test 'start:apps' http-get://localhost:8000 'npm run e2e-test ./local.js'",
    "ci:version": "lerna version --conventional-commits"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nearform/raw-salmon.git"
  },
  "keywords": [],
  "author": "NearForm",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nearform/raw-salmon/issues"
  },
  "homepage": "https://github.com/nearform/raw-salmon#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.4",
    "@commitlint/config-conventional": "^8.3.4",
    "babel-eslint": "^10.0.1",
    "commitizen": "^4.0.3",
    "docsify-cli": "^4.3.0",
    "dotenv": "^8.0.0",
    "eslint": "^5.16.0",
    "eslint-config-google": "^0.10.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-flowtype": "^2.50.3",
    "eslint-plugin-graphql": "^3.0.3",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^22.15.1",
    "eslint-plugin-node": "^8.0.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "eslint-plugin-testcafe": "^0.2.1",
    "git-cz": "^3.3.0",
    "graphql": "^14.2.1",
    "graphql-cli": "^3.0.13",
    "husky": "^1.3.1",
    "lerna": "^3.16.4",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "pretty-quick": "^1.10.0",
    "start-server-and-test": "^1.10.0",
    "url-loader": "^2.1.0"
  },
  "config": {
    "commitizen": {
      "path": "git-cz"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && pretty-quick --staged --pattern '**/*.graphql'",
      "post-commit": "git update-index --again",
      "pre-push": "npm run dev:lint"
    }
  },
  "lint-staged": {
    "**.{js,graphql}": [
      "npm run dev:generate-schema",
      "eslint --fix",
      "git add"
    ]
  },
  "dependencies": {
    "gatsby-source-s3": "0.0.0",
    "moment": "^2.24.0",
    "react-markdown": "^4.2.2"
  }
}
